{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "lib/helpers/productHelpers/editProduct.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "lib/middlewares/mongodbd.ts",
    "pages/api/auth/[...nextauth].ts",
    "components/Products/FreqOrderedList.jsx"
  ],
  "exclude": ["node_modules"]
}
